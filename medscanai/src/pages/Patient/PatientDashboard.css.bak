.pd-profile-summary {
  margin-top: 40px;
}

.pd-section-title {
  font-size: 24px;
  font-weight: 700;
  margin-bottom: 24px;
  color: #0f1724;
  text-align: right;
}

.pd-profile-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(380px, 1fr));
  gap: 24px;
}

.pd-info-card {
  background: #fff;
  border-radius: 16px;
  box-shadow: 0 2px 12px rgba(15, 23, 42, .06);
  border: 1px solid #f0f3f7;
  overflow: hidden;
  transition: transform .2s, box-shadow .2s;
}

.pd-info-card:hover {
  transform: translateY(-2px);
  box-shadow: 0 8px 24px rgba(15, 23, 42, .08);
}

.pd-info-header {
  background: linear-gradient(135deg, #2563eb 0%, #1d4ed8 100%);
  padding: 20px 24px;
  display: flex;
  align-items: center;
  gap: 12px;
  color: white;
}

.pd-info-header h3 {
  margin: 0;
  font-size: 18px;
  font-weight: 600;
}

.pd-info-icon {
  font-size: 24px;
}

.pd-info-content {
  padding: 24px;
  display: flex;
  flex-direction: column;
  gap: 20px;
}

.pd-info-item {
  display: flex;
  align-items: flex-start;
  gap: 16px;
}

.pd-info-item>i {
  font-size: 20px;
  color: #2563eb;
  min-width: 20px;
  margin-top: 4px;
}

.pd-info-item>div {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8px;
}

.pd-info-label {
  font-size: 13px;
  color: #6b7a99;
  font-weight: 500;
  text-transform: uppercase;
  letter-spacing: 0.5px;
}

.pd-info-value {
  font-size: 16px;
  color: #0f1724;
  font-weight: 500;
}

.pd-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 8px;
}

.pd-tag {
  display: inline-block;
  padding: 6px 14px;
  border-radius: 20px;
  font-size: 14px;
  font-weight: 500;
  white-space: nowrap;
}

.pd-tag-danger {
  background: #fee2e2;
  color: #dc2626;
  border: 1px solid #fecaca;
}

.pd-tag-warning {
  background: #fef3c7;
  color: #d97706;
  border: 1px solid #fde68a;
}

.pd-tag-info {
  background: #dbeafe;
  color: #2563eb;
  border: 1px solid #bfdbfe;
}

.text-muted {
  color: #9ca3af !important;
  font-style: italic;
}

/* Responsive */
@media (max-width: 768px) {
  .pd-profile-grid {
    grid-template-columns: 1fr;
  }
}
